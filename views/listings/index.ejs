<% layout("layouts/boilerplate")%>
<body>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for (let listing of listings) { %>
        <a href="/listings/<%=listing._id%>" class="listing-link">
    <div class="card col listing-card" style="width: 20rem;">
        <img src="<%=listing.image%>" class="card-img-top" alt="listing_img" style="height:20rem;">
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <h5 class="card-title"><%=listing.title%></h5>
          <p class="card-text"><%=listing.description%><br>
          <p>Price:<%=listing.price%>/night</p></p>
          
        </div>
      </div>
      </a>
      <% } %>
    </div>
</body>
