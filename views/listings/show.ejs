    </div>
    <h4>Reviews</h4>
    <div class="row">
    <% for(review of cards.reviews) {%>
        <div class="card col-5 ms-3 mb-3">
              <div class="card-body">
                <h5 class="card-title"><%=review.author.username%></h5>
                <p class="card-text"><%=review.comment%></p>
                <p class="starability-result card-text" data-rating="<%=review.rating%>">Rated: 3 stars</p>
            </div>
            <form method="post" action="/listings/<%=cards._id%>/reviews/<%=review._id%>?_method=DELETE">
                <button class="sm btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
        <% } %>
    </div>
