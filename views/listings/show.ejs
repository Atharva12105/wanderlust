<% layout("layouts/boilerplate")%>
<body>
    <ul>
           <li>Owner:<%= cards.owner.username %></li>
           <li><%=cards.title%></li>
           <li><%=cards.description%></li>
           <li><%=cards.location%></li>
           <li>&#8377;<%=cards.price.toLocaleString("en-IN")%></li>
    </ul>
    <% if(currUser && currUser._id.equals(cards.owner._id)) {%>
    <div class="button-div">
    <a href="http://localhost:3000/listings/<%=cards._id%>/edit"><button class="btn btn-primary" style="margin: 10px;">Edit</button></a>
    <form method="POST" action="http://localhost:3000/listings/<%=cards._id%>?_method=DELETE">
        <button class="del btn btn-danger" style="margin: 10px;">Delete</button>
    </form>
    </div>
    <% } %>

    <div class="col-8 offset-3">
        <% if(currUser) {%>
        <h4>Leave a review</h4>
        <form method="post" action="http://localhost:3000/listings/<%=cards._id%>/review" novalidate class="needs-validation">
            <div>
           <label for="rating">Rating</label>
           <input type="range" min="1" max="5" id="rating" name="rating">
           </div>
